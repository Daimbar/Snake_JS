input.onButtonPressed(Button.A + Button.B, function () {
    basic.clearScreen()
    basic.showString("3")
    basic.clearScreen()
    basic.pause(1000)
    basic.showString("2")
    basic.clearScreen()
    basic.pause(1000)
    basic.showString("1")
    basic.clearScreen()
    basic.pause(1000)
    //Fruits eating//
    let fruits = (randint(0, 4))
    led.plot(fruits, fruits);
    //Snake Body and movement//
    let snake = game.createSprite(2, 3);
    led.plot (snake);

})
